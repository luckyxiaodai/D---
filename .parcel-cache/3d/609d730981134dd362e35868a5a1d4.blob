/* css reset */
* {box-sizing: border-box;}
*::before,
*::after {box-sizing: border-box;}
* {margin: 0;padding: 0;}
ul,ol {list-style: none;}

/* style */
body{background: #eee;}

.globalHeader { 
    margin:20px;
    display:flex;
    justify-content: space-between;
}

.globalHeader>input {
    width: 100%;
    margin-right: 10px;
    height: 40px;
    padding: 0 10px;
    border:solid none #ddd;
    border-radius:4px;
}

.globalHeader>button {
    white-space: nowrap;
    padding: 0 28px;
    border:none;
    background: #0282B9;
    border-radius: 4px;
    color: white;
    font-size: 16px;
}

